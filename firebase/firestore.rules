rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ユーザー情報へのアクセス制御
    match /users/{userId} {
      // 自分の情報は読み取り可能
      allow read: if request.auth != null && request.auth.uid == userId;
      // 管理者は全ユーザー情報を読み取り・書き込み可能
      allow read, write: if request.auth != null && 
                           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // 新規ユーザー作成は認証済みユーザーのみ
      allow create: if request.auth != null;
    }
    
    // 取引データへのアクセス制御
    match /transactions/{transactionId} {
      // 自分の取引は読み取り可能
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'region_manager', 'block_manager', 'base_manager']
      );
      
      // 自分の取引は作成・更新可能（未承認の場合のみ）
      allow create: if request.auth != null && 
                      request.resource.data.userId == request.auth.uid;
      
      allow update: if request.auth != null && (
        // 自分の取引で未承認または差戻し状態
        (resource.data.userId == request.auth.uid && 
         resource.data.status in ['pending', 'rejected']) ||
        // 承認権限を持つユーザー
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'region_manager', 'block_manager', 'base_manager']
      );
      
      // 管理者のみ削除可能
      allow delete: if request.auth != null && 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // 承認履歴へのアクセス制御
    match /approval_history/{historyId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'region_manager', 'block_manager', 'base_manager'];
    }
    
    // 証憑データへのアクセス制御
    match /receipts/{receiptId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && (
        request.resource.data.uploadedBy == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      allow delete: if request.auth != null && 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // 用途マスタへのアクセス制御
    match /categories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // 組織（ブロック）へのアクセス制御
    match /organizations/{orgId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // 監査ログ（読み取り専用、管理者のみ）
    match /audit_logs/{logId} {
      allow read: if request.auth != null && 
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow write: if false; // Cloud Functionsからのみ書き込み
    }
  }
}
